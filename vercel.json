{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.m3u8)",
      "headers": {
        "Content-Type": "application/vnd.apple.mpegurl",
        "Access-Control-Allow-Origin": "*"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.ts)",
      "headers": {
        "Content-Type": "video/mp2t",
        "Access-Control-Allow-Origin": "*"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 